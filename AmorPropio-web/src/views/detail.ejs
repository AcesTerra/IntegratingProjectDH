<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/44355dc707.js"
      crossorigin="anonymous"
    ></script>

    <link
      href="https://fonts.googleapis.com/css2?family=Corben:wght@700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/detailStyle.css" />
    <title>Detalle producto</title>
  </head>

  <body>
    <%- include("partials/header") %>
    <main>
      <section class="detail-item">
        <div class="left-images">
          <img src="/images/<%= product.image %>" alt="" class="big-image" />
          <% if(product.moreImages.length !== 0){ %>

          <div class="under-images">
            <% for(let image in product.moreImages) { %>
            <img src="/images/<%= product.moreImages[image] %>" alt="" />
            <% } %>
          </div>
          <% } %>
        </div>
        <div class="right-info">
          <p class="item-name"><%= product.name %></p>
          <h3>Descripcion</h3>
          <p class="item-description">
            Lorem ipsum dolor sit amet consectetur, adipisicing elit. Saepe
            ducimus, aliquam nihil quos ut sunt tempore magni quam veniam
            voluptates consequuntur
          </p>
          <p class="item-price">$<%= product.price %></p>
          <div class="item-specs">
            <h3>Selecciona color</h3>
            <select name="" id="" class="color-select">
              <option value="verde">Verde</option>
            </select>
          </div>
          <div class="item-specs">
            <h3>Cantidad</h3>
            <select name="" id="" class="quantity-select">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
            </select>
          </div>

          <button class="add-button" type="submit">Agregar al carrito</button>
          <div class="crud-buttons">
            <a class="edit-button" href="/products/edit/<%= product.id %>"
              >Editar producto</a
            >
            <form
              action="/products/<%= product.id %>?_method=DELETE"
              method="POST"
            >
              <button type="submit" class="delete-button">
                Borrar producto
              </button>
            </form>
          </div>
        </div>
      </section>
      <section class="recom-section">
        <h1 class="recom-title">Recomendaciones</h1>
        <div class="all-recomendations">
          <% recomendations.forEach(product=>{ %>
          <div class="recomendation">
            <a href="/products/<%= product.id %>">
              <img src="/images/<%= product.image %>" alt="" />
              <p class="recom-name"><%= product.name %></p>

              <p class="recom-price">MXN $<%= product.price %></p>
            </a>
          </div>
          <% }) %>
        </div>
      </section>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>
